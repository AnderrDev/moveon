---
const products = [
  {
    name: "CH+ Creatina Pura",
    description: "Creatina monohidrato micronizada de máxima pureza para resultados superiores.",
    price: "$29.99",
    image: "https://images.pexels.com/photos/4720800/pexels-photo-4720800.jpeg?auto=compress&cs=tinysrgb&w=400",
    features: ["5g por porción", "Sin sabor", "300g", "60 porciones"],
    badge: "Más Vendido"
  },
  {
    name: "CH+ Creatina Avanzada",
    description: "Fórmula premium con creatina HCL para mejor absorción y sin retención de agua.",
    price: "$39.99",
    image: "https://images.pexels.com/photos/4397842/pexels-photo-4397842.jpeg?auto=compress&cs=tinysrgb&w=400",
    features: ["3g por porción", "Mejor absorción", "180g", "60 porciones"],
    badge: "Premium"
  },
  {
    name: "CH+ Pre-Entreno",
    description: "Combinación perfecta de creatina con cafeína y aminoácidos para máximo rendimiento.",
    price: "$49.99",
    image: "https://images.pexels.com/photos/4397765/pexels-photo-4397765.jpeg?auto=compress&cs=tinysrgb&w=400",
    features: ["Creatina + Cafeína", "Sabor frutal", "400g", "40 porciones"],
    badge: "Nuevo"
  }
];
---

<section id="products" class="py-20 bg-gray-50 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 slide-up-on-scroll">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-display font-bold text-dark mb-4">
        Productos <span class="text-primary">CH+</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Descubre nuestra línea completa de creatina CH+, la marca premium de MOVEON diseñada para cada tipo de atleta y objetivo de entrenamiento.
      </p>
    </div>
    
    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product, index) => (
        <div class={`product-card bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden scale-in-on-scroll group`} style={`animation-delay: ${0.2 * index}s`}>
          <!-- Product Image -->
          <div class="relative overflow-hidden">
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
            />
            <div class="absolute top-4 right-4 bg-primary text-secondary px-3 py-1 rounded-full text-sm font-semibold">
              {product.badge}
            </div>
          </div>
          
          <!-- Product Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-dark mb-2">{product.name}</h3>
            <p class="text-gray-600 mb-4 text-sm leading-relaxed">{product.description}</p>
            
            <!-- Features -->
            <div class="grid grid-cols-2 gap-2 mb-4">
              {product.features.map(feature => (
                <div class="flex items-center text-sm text-gray-600 mr-2 flex-shrink-0">
                  <svg class="w-3 h-3 text-primary mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </div>
              ))}
            </div>
            
            <!-- Price and CTA -->
            <div class="flex items-center justify-between">
              <span class="text-2xl font-bold text-primary">{product.price}</span>
              <button class="bg-primary text-secondary px-4 py-2 rounded-lg hover:bg-yellow-400 hover:scale-105 transition-all duration-200 font-bold">
                Comprar
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center mt-12 fade-in-on-scroll">
      <a href="#contact" class="inline-flex items-center px-8 py-4 bg-dark text-white font-bold rounded-lg hover:bg-gray-800 transform hover:scale-105 transition-all duration-200 shadow-lg">
        Ver Catálogo Completo
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .product-card {
    transform: translateY(0);
  }
  
  .product-card:hover {
    transform: translateY(-4px);
  }
</style>